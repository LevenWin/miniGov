page {
  height: 100%;
}
.container {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.section {
  margin: 0rpx 10rpx;
}
.header {
  height: 30rpx;
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.header .header-left {
  flex: 1;
  color: rgb(39, 57, 90);
  font-size: 15px;
  align-items: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;

}
.header .header-left icon{
  height: 15px;
  width: 8rpx;
  background-color: rgb(39, 57, 90);
  margin: 0px 10rpx;
}

.header .header-right{
  width: 40rpx;
  height: 100%;
  align-items: right;
  background-color: yellow;
}
.header .header-right image {
  width: 20rpx;
  height: 100rpx;
} 

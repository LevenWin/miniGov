  align-items: center;
  color:  #666;
  font-size: 17px;
  background-color: #ddd;
  height: 80rpx;
}
.member-more {
  margin-top: 4rpx;
}
.member-header {
  margin-top: 10rpx;
}
.member-footer {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;

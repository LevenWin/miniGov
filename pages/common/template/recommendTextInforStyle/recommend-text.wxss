.recommend-text-content {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 5rpx 10rpx;
  box-sizing: border-box;
  height: 100%;
}

.recommend-text-top {
  font-size: 16px;
  color: black;
  flex: 1;
  text-overflow: ellipsis;
}

.recommend-text-bottom {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999999;
}

.recommend-text-bottom text:last-child{
  color: rgb(66, 96, 180);
}
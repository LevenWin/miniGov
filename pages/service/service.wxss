/* pages/Service/service.wxss */
page {
  background-color: #eee;
}
.service-tag {
  margin: 20rpx 0rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  background-color: white;
}
.service-tag-item {
  flex: 1;
  display:  flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.hover {
  background-color: #eee;
}

.service-tag-item image-pro {
  width: 90rpx;
  height: 90rpx;
}
.service-tag-item text {
  color: #333;
  font-size: 14px;
  text-align: center;
  margin-top: 10rpx;
}

.service-news {
  height: 120rpx;
  margin: 0rpx 0;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.service-news .left {
  width: 70rpx;
  margin: 8rpx 30rpx;
  border-radius: 4px;
  border: solid 1rpx rgb(78, 94, 122);
  background-color: white;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.service-news .left text {
  font-size: 12px;
  color: rgb(78, 94, 122);
  flex: 1;
  display: flex;
  justify-content: center;
}
.service-news .left text:first-child {
  background-color: rgba(194, 203, 219,0.4)
}